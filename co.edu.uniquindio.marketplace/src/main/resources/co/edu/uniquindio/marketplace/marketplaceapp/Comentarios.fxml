<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.marketplace.marketplaceapp.controller.ComentariosController"
            style="-fx-background-color: #F5F5F5; -fx-padding: 20;">
    <children>
        <!-- Título -->
        <VBox spacing="10" layoutX="10" layoutY="10" alignment="TOP_CENTER">
            <Label text="Comentarios del Producto" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <Separator orientation="HORIZONTAL" />
        </VBox>

        <!-- Lista de comentarios -->
        <VBox layoutX="10" layoutY="50" spacing="15" prefWidth="480" prefHeight="400">
            <children>
                <ListView fx:id="comentariosListView" style="-fx-border-color: #ddd; -fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" prefHeight="350" />
            </children>
        </VBox>

        <!-- Botón de cierre -->
        <Button text="Cerrar" layoutX="190" layoutY="470"
                onAction="#cerrarVentana"
                style="-fx-background-color: #4267B2; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-border-radius: 5; -fx-background-radius: 5;">
        </Button>
    </children>
</AnchorPane>
