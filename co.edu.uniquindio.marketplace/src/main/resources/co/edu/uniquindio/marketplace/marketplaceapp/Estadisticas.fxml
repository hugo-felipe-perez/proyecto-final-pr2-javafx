<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.marketplace.marketplaceapp.controller.EstadisticasController">
    <children>
        <Label text="📊 Panel de Estadísticas Detalladas" layoutX="20" layoutY="20" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        <TextArea fx:id="estadisticasArea" layoutX="20" layoutY="60" prefWidth="500" prefHeight="300" wrapText="true" style="-fx-background-color: #e3f2fd;" />
        <Button text="💾 Exportar Estadísticas" layoutX="20" layoutY="380" onAction="#handleExportar" style="-fx-background-color: #43a047; -fx-text-fill: white;" />
        <Button text="⬅️ Regresar" layoutX="150" layoutY="380" onAction="#handleRegresar" style="-fx-background-color: #1e88e5; -fx-text-fill: white;" />
    </children>
</AnchorPane>
