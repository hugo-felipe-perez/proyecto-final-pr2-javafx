<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.marketplace.marketplaceapp.controller.ActualizarUsuarioController">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Etiquetas y campos de texto -->
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Apellidos:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="apellidosField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Cédula:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="cedulaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Dirección:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="direccionField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Usuario:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Contraseña:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
