<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.marketplace.marketplaceapp.controller.AdminController">
    <children>
        <!-- Barra Superior -->
        <HBox layoutX="0" layoutY="0" prefHeight="60" prefWidth="1100" style="-fx-background-color: #4267B2; -fx-padding: 10;">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Marketplace - Panel de Administrador" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleCerrarSesion" style="-fx-background-color: #FF5A5F; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar Sesión" />
            </children>
        </HBox>

        <!-- Contenido Principal -->
        <TabPane fx:id="adminTabPane" layoutX="20" layoutY="80" prefHeight="600" prefWidth="1060">
            <tabs>
                <!-- Pestaña de Productos -->
                <Tab closable="false" text="Productos">
                   <content>
                       <AnchorPane>
                           <children>
                               <TableView fx:id="productosTable" layoutX="10" layoutY="10" prefHeight="400" prefWidth="1020">
                                   <columns>
                                       <TableColumn fx:id="nombreColumn" prefWidth="200" text="Nombre" />
                                       <TableColumn fx:id="categoriaColumn" prefWidth="200" text="Categoría" />
                                       <TableColumn fx:id="estadoColumn" prefWidth="150" text="Estado" />
                                       <TableColumn fx:id="precioColumn" prefWidth="150" text="Precio" />
                                   </columns>
                               </TableView>
                           </children>
                       </AnchorPane>
                   </content>
                </Tab>

                <!-- Pestaña de Usuarios -->
                <Tab closable="false" text="Usuarios">
   <content>
                       <AnchorPane>
                           <children>
                               <TableView fx:id="usuariosTable" layoutX="10" layoutY="10" prefHeight="400" prefWidth="1020">
                                   <columns>
                                       <TableColumn fx:id="nombreUsuarioColumn" prefWidth="150" text="Nombre" />
                                       <TableColumn fx:id="apellidosUsuarioColumn" prefWidth="150" text="Apellidos" />
                                       <TableColumn fx:id="cedulaUsuarioColumn" prefWidth="150" text="Cédula" />
                                       <TableColumn fx:id="direccionUsuarioColumn" prefWidth="150" text="Dirección" />
                                       <TableColumn fx:id="usernameColumn" prefWidth="150" text="Usuario" />
                                       <TableColumn fx:id="passwordnameColumn" prefWidth="150" text="Contraseña" />
                                       <TableColumn fx:id="rolUsuarioColumn" prefWidth="120" text="Rol" />
                                   </columns>
                               </TableView>
                               <HBox layoutX="10" layoutY="420" spacing="10">
                                  <children>
                                      <Button onAction="#handleAgregarUsuario" style="-fx-background-color: #5B8DEF; -fx-text-fill: white;" text="Agregar Usuario" />
                                      <Button onAction="#handleActualizarUsuario" style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Actualizar Usuario" />
                                      <Button onAction="#handleEliminarUsuario" style="-fx-background-color: #FF5A5F; -fx-text-fill: white;" text="Eliminar Usuario" />
                                  </children>
                               </HBox>
                           </children>
                       </AnchorPane>
   </content>
                </Tab>

                <!-- Pestaña de Estadísticas -->
                <Tab closable="false" text="Estadísticas">
   <content>
                       <AnchorPane>
                           <children>
                               <TextArea fx:id="estadisticasArea" editable="false" layoutX="10" layoutY="10" prefHeight="400" prefWidth="1020" style="-fx-border-color: #E0E0E0;" />
                               <Button layoutX="10" layoutY="420" onAction="#handleExportarEstadisticas" style="-fx-background-color: #5B8DEF; -fx-text-fill: white;" text="Exportar Estadísticas" />
                                <Button layoutX="829.0" layoutY="420.0" onAction="#handleEstadisticasAvanzadas" style="-fx-background-color: #5B8DEF; -fx-text-fill: white;" text="Estadisticas Avanzadas" />
                           </children>
                       </AnchorPane>
   </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
