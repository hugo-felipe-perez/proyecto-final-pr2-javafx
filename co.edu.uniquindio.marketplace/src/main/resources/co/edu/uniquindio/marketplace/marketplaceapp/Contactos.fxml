<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.marketplace.marketplaceapp.controller.ContactosController" spacing="10" style="-fx-padding: 20;">
    <Label text="Mis Contactos" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TableView fx:id="contactosTable" style="-fx-border-color: #E0E0E0;">
        <columns>
            <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="150" />
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="buscarContactoField" promptText="Buscar contacto..." style="-fx-pref-width: 300;" />
        <Button fx:id="agregarContactoButton" text="Agregar Contacto" onAction="#handleAgregarContacto" style="-fx-background-color: #5B8DEF; -fx-text-fill: white;" />
    </HBox>
</VBox>
